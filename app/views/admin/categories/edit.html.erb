<div class="container mt-4">
  <h1>カテゴリ編集</h1>

  <%= form_with model: @category, url: admin_category_path(@category), method: :patch do |f| %>
    <div class="form-group">
      <label for="category_name">カテゴリ名</label>
      <%= f.text_field :name, class: "form-control", id: "category_name" %>
    </div>
    <%= f.submit '更新', class: "btn btn-primary" %>
  <% end %>

  <%= link_to '一覧に戻る', admin_categories_path, class: "btn btn-secondary mt-3" %>
</div>
