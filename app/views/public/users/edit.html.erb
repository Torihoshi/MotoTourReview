<div class="container mt-5 mb-5">
  <div class="row col-6 mx-auto">
    <h1>ユーザー情報編集</h1>

    <%= form_for(@user) do |f| %>
      <table class="block" style="width: 100%;" cellpadding="5">
        <tr>
          <th>メールアドレス<span class="text-danger">*</span></th>
          <td><%= f.email_field :email, class: "form-control" %></td>
        </tr>
        <tr>
          <th>アカウント名<span class="text-danger">*</span></th>
          <td><%= f.text_field :name, class: "form-control" %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= f.text_area :introduction, class: "form-control" %></td>
        </tr>
        <tr>
          <th>アカウント画像</th>
          <td><%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %></td>
        </tr>
        <tr>
          <th>バイク名</th>
          <td><%= f.text_field :bike_name, class: "form-control" %></td>
        </tr>
      </table>

      <div class="d-grid gap-2 col-6 mx-auto">
        <%= f.submit "更新", class: "btn btn-outline-success btn-lg mt-2 mb-5" %>
        <%= link_to "退会する", unsubscribe_user_path(current_user), class: "btn btn-outline-danger btn-sm" %>
      </div>
    <% end %>


  </div>
</div>
