<!--/MotoTourReview/app/views/public/users/show.html.erb-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <!-- 左側部分 -->
    <div class='col-md-3 mt-5 mb-auto sample sample01'>
      <div><%= image_tag @user.get_profile_image, width: "100%" %></div>
      <table class="my-3">
        <tr>
          <th>ユーザー：</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>バイク：</th>
          <td><%= @user.bike_name %></td>
        </tr>
      </table>
      <div><%= @user.introduction %></div>

      <% if current_user == @user %>
        <div class='row my-4'>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- 右側部分 -->
    <div class='col-md-9 mt-5'>
      <h3><%= @user.name %>さんの投稿一覧</h3>

      <div class="row">
        <% @user_posts.each do |post| %>
          <div class="col-md-4 mb-4">
            <div class="card position-relative">
              <%= link_to post_path(post) do %>
                <div class="position-relative">
                  <%= image_tag post.get_image, class: "card-img-top post-image", alt: "投稿画像" %>
                  <h5 class="card-title overlay-text spot-name"><%= post.spot_name %></h5>
                  <div class="overlay-text visit-date"><%= post.visited_date %></div>
                </div>
                <div class="card-body">
                  <p class="card-text"><%= post.title %></p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to "一覧に戻る", posts_path %>
