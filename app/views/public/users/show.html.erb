<!--/MotoTourReview/app/views/public/users/show.html.erb-->
<div class='container px-5 px-sm-0'>
  <div class='row gx-5'>
    <!-- 左側部分 -->
    <div class='col-md-4 mt-5 mb-auto profile-box'>
      <%= render "info", user: @user %>
    </div>

    <!-- 右側部分 -->
    <div class='col-offset-1 col-md-8 mt-5 ml-5'>
      <div class='row'>
        </%= render 'search' %>
      </div>

      <div class="row d-flex justify-content-between align-items-center">
        <div class="col-md-8 text-start"><%= @user.name %>さんの投稿一覧</div>
        <div class="col-md-4 text-end"><%== pagy_nav(@pagy) %></div>
      </div>

      <div class="row row-cols-2 row-cols-md-1">
        <%= render 'users_post' %>
      </div>

      <div class="row d-flex align-items-center text-center">
        <%== pagy_nav(@pagy) %>
      </div>
    </div>
    
  </div>
</div>
