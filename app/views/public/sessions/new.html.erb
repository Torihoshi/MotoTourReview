<div class="container mt-5 mb-5">
  <div class="row col-6 mx-auto">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <table class="block" style="width: 100%;" cellpadding="5">
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100" %></td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control w-50" %></td>
        </tr>
      </table>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="d-grid gap-2 col-6 mx-auto">
        <%= f.submit "ログインする", class: "btn btn-outline-success btn-lg" %>
        <%= render "public/shared/links" %>
      </div>

    <% end %>
  </div>
</div>
