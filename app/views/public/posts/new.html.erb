/MotoTourReview/app/views/public/posts/new.html.erb

<%= form_with model: @post do |f| %>
  <h4>スポット名</h4>
  <%= f.text_field :name %>

  <h4>タイトル</h4>
  <%= f.text_field :post_title %>

  <h4>コメント</h4>
  <%= f.text_area :post_comment %>

  <h4>日付</h4>
  <%= f.date_field :visited_date %>

  <%= f.submit '投稿' %>
<% end %>